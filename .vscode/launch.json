{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug cli",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceRoot}/cmd/manager/main.go",
            "cwd": "${workspaceRoot}",
            "args": [
                "--webhook-server-port",
                "9443",
                "--metrics-addr",
                ":8080",
                "--max-reconciles",
                "10",
                "--apiserver-qps-throttle",
                "50",
                "excluded-namespace",
                "kube-system",
                "--excluded-namespace",
                "kube-public",
                "--excluded-namespace",
                "hnc-system",
                "--excluded-namespace",
                "kube-node-lease",
                "--enable-hrq"
            ]
        },
        {
            "name": "Debug vcluster (localhost:2346)",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 2345,
            "host": "localhost",
            "substitutePath": [
                {
                    "from": "${workspaceFolder}",
                    "to": "/app",
                },
            ],
            "showLog": true,
            //"trace": "verbose", // use for debugging problems with delve (breakpoints not working, etc.)
        }
    ]
}